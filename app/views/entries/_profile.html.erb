<!-- you have to pass user as a variable -->
<div class="content-center">
  <div class="col-xs-12">
    <%= cl_image_tag(user.facebook_picture_url, { size: '50x50', crop: :thumb, gravity: :face , class: "avatar-ex-large"} ) %>
  </div>
  <div class="col-xs-12" >
    <h4><strong><%= user.first_name %> <%= user.last_name %></strong></h4>
  </div>
  <div class="col-xs-12" style="color: grey;font-size: 20px;">
    <i class="fa fa-home col-xs-1" style="font-size: 25px"></i>
    <p class="col-xs-10" style="margin-bottom:2px;"><%= user.address %></p>
  </div>

  <div class="col-xs-12" style="color: grey">
    <i class="fa fa-asterisk col-xs-1" style="font-size: 25px"></i>
    <% if user.description %>
      <p><%= user.translated_description %></p>
      <p><%= user.email %></p>
    <% end %>
  </div>
</div>
